<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="card-title text-center mb-4">Fetch Google Trends Data</h1>

          <div class="text-right mb-3">
            <% combined_file = Rails.root.join('public', 'all_trends_data.csv') %>
            <% if File.exist?(combined_file) %>
              <%= link_to "Download All Trends Data", "/all_trends_data.csv", class: 'btn btn-link', download: "all_trends_data.csv" %>
            <% end %>
          </div>

          <%= form_with url: trends_fetch_path, method: :post, html: { class: 'd-flex flex-column align-items-center' } do %>
            <div class="mb-3 w-100">
              <%= text_field_tag :queries, nil, placeholder: "Enter search queries separated by commas (e.g., star wars, philippines, japan)", class: 'form-control form-control-lg' %>
            </div>
            <%= submit_tag "Fetch Trends", class: 'btn btn-primary w-100' %>
          <% end %>

          <% if flash[:notice] %>
            <div class="alert alert-info mt-3">
              <%= flash[:notice] %>

              <!-- Display download buttons for each CSV file -->
              <% if flash[:filenames] %>
                <% flash[:filenames].each do |query, filename| %>
                  <% if File.exist?(Rails.root.join('public', filename)) %>
                    <div class="mt-3 text-center">
                      <%= link_to "Download Trends CSV for '#{query}'", "/#{filename}", class: 'btn btn-success', download: filename %>
                    </div>
                  <% end %>
                <% end %>
              <% else %>
                <p class="mt-3 text-center">No CSV files available for download.</p>
              <% end %>
            </div>
          <% end %>

          <% if flash[:alert] %>
            <div class="alert alert-danger mt-3">
              <%= flash[:alert] %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
