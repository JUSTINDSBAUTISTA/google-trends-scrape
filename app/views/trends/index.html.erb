<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="card-title text-center mb-4">Fetch Google Trends Data</h1>

          <%= form_with url: trends_fetch_path, method: :post, html: { class: 'd-flex flex-column align-items-center' } do %>
            <div class="mb-3 w-100">
              <%= text_field_tag :query, nil, placeholder: "Enter search query (e.g., star wars)", class: 'form-control form-control-lg' %>
            </div>
            <%= submit_tag "Fetch Trends", class: 'btn btn-primary w-100' %>
          <% end %>

          <% if flash[:notice] %>
            <div class="alert alert-info mt-3">
              <%= flash[:notice] %>

              <!-- Display download button only if the CSV is generated -->
              <% if flash[:filename] && File.exist?(Rails.root.join('public', flash[:filename])) %>
                <div class="mt-3 text-center">
                  <%= link_to 'Download Trends CSV', "/#{flash[:filename]}", class: 'btn btn-success', download: flash[:filename] %>
                </div>
              <% else %>
                <p class="mt-3 text-center">No CSV file available for download.</p>
              <% end %>
            </div>
          <% end %>

          <% if flash[:alert] %>
            <div class="alert alert-danger mt-3">
              <%= flash[:alert] %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
